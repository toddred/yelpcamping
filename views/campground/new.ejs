<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Place to Camp</h1>

        <div style="width: 30%; margin: 50px auto;">
            <form action="/camp" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name of Campground"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imgUrl" placeholder="image url"></input>
                </div>                
                <div class="form-group">
                    <input class="form-control" type="text" name="discription" placeholder="discription"></input>
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/camp">View Campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>